@{
    ViewData["Title"] = "Usuários";
}

<link href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">
                    <a href="@Url.Action("Index", "User")">Usuários</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Create", "User")">Adicionar</a>
                </li>
            </ol>
        </nav>
    </div>
</div>

<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <!-- Adicione uma ID para a tabela -->
                    <table id="userTable" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>Nome Completo</th>
                                <th>CPF</th>
                                <th>E-mail</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.min.js"></script>
    <script src="~/js/Users/Index.js"></script>
}

