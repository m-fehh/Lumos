@using Lumos.Application.Enums;
@using System.Reflection;
@using System.ComponentModel.DataAnnotations;
@using Newtonsoft.Json;
@{
    ViewData["Title"] = "Criar Usuário";
}

@model Lumos.Application.Dtos.Management.UsersDto;

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Users")">Usuários</a>
                </li>
                <li class="breadcrumb-item active">
                    <a href="@Url.Action("Create", "Users")">Adicionar</a>
                </li>
            </ol>
        </nav>
    </div>
</div>

@if (@ViewBag.TenantId == null)
{
    @Html.Partial("~/Views/Modals/_GetAllTenantsModals.cshtml")
}

<div class="container-fluid">
    <form id="registerUser">
        <input type="hidden" id="sessionTenantId" name="TenantId" value="@ViewBag.TenantId" />

        <p class="section-identification">Cadastro de Usuário</p>
        <div class="row">
            <div class="col-md-9" style="border-right: 1px solid #e9ecef;">

                <div class="row" style="padding-left: 15px;">
                    <div class="form-group col-md-12">
                        <label for="Email" class="input-label">E-mail<span class="input-label-required"></span></label>
                        <input type="text" class="form-control" name="Email" id="Email" placeholder="">
                    </div>
                </div>
                <div class="row" style="padding-left: 15px;">
                    <div class="form-group col-md-12">
                        <label for="FullName" class="input-label">Nome Completo<span class="input-label-required"></span></label>
                        <input type="text" class="form-control" name="FullName" id="FullName" placeholder="">
                    </div>
                </div>

                <div class="row" style="padding-left: 15px;">
                    <div class="form-group col-md-6">
                        <label for="Password" class="input-label">Senha<span class="input-label-required"></span></label>
                        <input type="text" class="form-control" name="Password" id="Password" placeholder="">
                    </div>

                    <div class="form-group col-md-6">
                        <label for="Cpf" class="input-label">CPF<span class="input-label-required"></span></label>
                        <input type="text" class="form-control" name="Cpf" id="Cpf" placeholder="">
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <label for="treeview" class="input-label">Selecione o acesso do usuário<span class="input-label-required"></span></label>
                <div id="treeview" style="margin-left: -15px;">
                    <ul></ul>
                </div>
            </div>
        </div>
        <hr />

        <div class="row" style="padding: 0 15px;">
            <div class="col-md-12" style="display: flex; justify-content: flex-end; gap: 20px;">
                <button class="btn btn-success save float-right" type="submit">Finalizar Cadastro</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-masker/1.2.0/vanilla-masker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script src="~/js/Users/Create.js"></script>
}